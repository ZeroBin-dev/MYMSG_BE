<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myapi.mymsgapi.dao.CommDAO">

  <select id="selectCnstCd" parameterType="com.myapi.mymsgapi.contoller.comm.dto.CnstReq" resultType="com.myapi.mymsgapi.contoller.comm.dto.CnstRes">
    /* 공통상수조회 */
    SELECT
      CNST_VL
    FROM
      COMM_CNST_MASTER
    WHERE 1=1
      AND USE_YN = 'Y'
      AND CNST_CD = #{cnstCd}
  </select>

</mapper>